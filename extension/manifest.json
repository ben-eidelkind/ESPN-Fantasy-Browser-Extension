{
  "manifest_version": 3,
  "name": "ESPN Fantasy Exporter (Supabase)",
  "version": "1.0.0",
  "description": "Export your ESPN Fantasy Football data to Supabase or download JSON.",
  "action": {
    "default_title": "ESPN Fantasy Exporter",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "permissions": ["storage", "tabs", "activeTab", "scripting"],
  "host_permissions": ["https://fantasy.espn.com/*", "https://*.espn.com/*"],
  "content_scripts": [
    {
      "matches": ["https://fantasy.espn.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
